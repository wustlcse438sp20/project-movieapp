<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeeCommentActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seeCommentRecyclerView"
        android:text="@string/commentrating"
        android:textSize="30sp"
        android:id="@+id/commenttitle"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toTopOf="@+id/seeCommentRecyclerView"
        app:layout_constraintTop_toTopOf="parent"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seeCommentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        app:layout_constraintTop_toBottomOf="@id/commenttitle"
        />



    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:text="@string/back"
        android:onClick="backtohome"
        app:layout_constraintTop_toBottomOf="@id/seeCommentRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>